<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:elevation="@dimen/cardview_default_elevation"
    app:cardCornerRadius="@dimen/attachment_card_radius"
    app:cardElevation="6dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">
        <ImageView
            android:src="@drawable/unknown_file_download"
            android:id="@+id/attachmentImage"
            android:layout_width="@dimen/activity_horizontal_margin"
            android:layout_height="@dimen/activity_horizontal_margin" />
        <TextView
            android:layout_marginStart="8dp"
            android:id="@+id/attachmentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</android.support.v7.widget.CardView>